<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingHorizontal="@dimen/scaffold_horizontal_padding"
  android:paddingBottom="@dimen/spacer_spacing_12">

  <com.google.android.material.bottomsheet.BottomSheetDragHandleView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <com.google.android.material.textview.MaterialTextView
    style="@style/TextAppearance.Material3.TitleLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/search_filter_title"
    android:textAlignment="center" />

  <Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacer_spacing_8" />

  <include
    android:id="@+id/search_filter_orientation"
    layout="@layout/search_filter_orientation" />

  <include
    android:id="@+id/search_filter_sizes"
    layout="@layout/search_filter_size" />

</LinearLayout>